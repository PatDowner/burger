<div class="jumbotron">
  <h1 class="display-4">Burgers Up</h1>
  <p class="lead">This is a simple application to keep track of burger orders and whether or not they have already been devoured.</p>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <form>
        <div class="form-group">
          <label for="burger">Burger Name</label>
          <input type="text" class="form-control" id="burger">
        </div>
        <button type="submit" id="addGrocery" class="btn btn-primary">Add Grocery</button>
      </form>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-6">
      <ul id="notDevoured" class="list-group">
        <h2>Not Devoured</h2>
        {{#each groceries}}
        {{#unless this.devoured}}
        <li id="{{ this.id }}" class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">{{ this.name }}</h5>
            <button
              data-name="{{ this.name }}"
              class="devour btn btn-success">Devour It!</button>
          </div>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <ul id="devoured" class="list-group">
        <h2>Devoured</h2>
        {{#each groceries}}
        {{#if this.devoured}}
        <li id="{{ this.id }}" class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">{{ this.name }}</h5>
            <button class="btn btn-danger remove">remove</button>
          </div>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>